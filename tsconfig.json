{
    "include": ["src/**/*.ts"],
    "exclude": [
        "node_modules/**/*.*",
        "src/lib/**/*.*",
        "src/**/*spec*",
        "src/**/*test*"
    ],
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./build",
        "strict": true,
        "typeRoots": ["./node_modules/@types"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    }
}
